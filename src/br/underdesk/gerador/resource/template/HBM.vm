<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- Generated by velocity -->
<hibernate-mapping>
  <class name="$classe.getPacote().$classe.getNome()" table="$classe.getNomeLogical()">
    <id name="$classe.getPrimaryKey().getColuna()" column="$classe.getPrimaryKey().getColunaLogical()" type="$classe.getPrimaryKey().getTipoSimple()">
#if($classe.getTipo()=="view")
      	<generator class="assigned"/>      
#else
		<generator class="identity"/>
#end
    </id>
#foreach ($campo in $classe.getCampos())	
#if($campo.getColuna()!=$classe.getPrimaryKey().getColuna())
    <property name="$campo.getColuna()" type="$campo.getTipoSimple()">
      <column #if($campo.getTipo()=="int"||$campo.getTipo()=="String") length="$campo.getTamanho()" #end name="$campo.getColunaLogical()" not-null="$campo.getNotNull()"/>
    </property>	
#end        
#end
 </class>
</hibernate-mapping>